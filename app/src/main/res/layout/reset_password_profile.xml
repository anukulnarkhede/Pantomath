<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentProfile.ResetPasswordProfile"
    android:background="#ffffff"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




        <androidx.appcompat.widget.Toolbar
            android:id="@+id/forgetPasswordToolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#fff">

            <TextView
                android:autoSizeMaxTextSize="20dp"
                android:id="@+id/toolbar_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="sans-serif-medium"
                android:text="Reset Password"
                android:textColor="@color/blue"
                android:textSize="20dp"
                tools:ignore="HardcodedText" />

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/resetEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="#999"
        android:layout_marginTop="24dp"
        android:paddingStart="16dp"
        android:textSize="@dimen/TextSize16"
        android:fontFamily="sans-serif"
        android:textColor="#121212"
        android:imeOptions="actionDone"
        android:layout_marginHorizontal="16dp"
        android:hint="Enter your registered email"
        android:background="@drawable/text_view_bg"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <Button
        android:id="@+id/reset_submit_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit email"
        android:textAllCaps="false"
        android:textSize="@dimen/TextSize16"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="32dp"
        android:textColor="@color/blue"
        android:background="@drawable/login_butt_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetEmail"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="Note : We will send you a link tap reset your password on your email."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_submit_butt" />

</androidx.constraintlayout.widget.ConstraintLayout>