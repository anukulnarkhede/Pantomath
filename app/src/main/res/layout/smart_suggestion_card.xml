<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/SmartSuggestionCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17.6dp"
        android:layout_marginEnd="17.6dp"
        android:layout_marginBottom="17.6dp"
        android:layout_marginTop="2dp"

        android:background="@drawable/smart_suggestion_card_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.jackandphantom.circularimageview.RoundedImage
            android:id="@+id/roundedImageSScard"
            android:layout_width="103.4dp"
            android:layout_height="103dp"
            android:layout_marginStart="17.6dp"
            android:layout_marginTop="17.6dp"
            android:layout_marginBottom="17.6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_question"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rounded_radius="30" />

        <TextView
            android:id="@+id/QuestionTextSScard"
            android:layout_width="match_parent"
            android:layout_height="59.4dp"
            android:layout_marginStart="129.8dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="17.6dp"
            android:text="I need some help with finding focal length of concave mirror and image formed by convex mirror."
            android:textColor="#121212"
            android:textSize="13sp"
            android:padding="5dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/roundedImageSScard"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/subjectTagSScard"
            android:layout_width="83.6dp"
            android:layout_height="35.2dp"
            android:layout_marginStart="90.2dp"
            android:layout_marginTop="8.8dp"
            android:background="@drawable/login_butt"
            android:clickable="false"
            android:fontFamily="sans-serif-medium"
            android:stateListAnimator="@null"
            android:layout_marginBottom="23dp"
            android:text="Physics"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/roundedImageSScard"
            app:layout_constraintTop_toBottomOf="@+id/QuestionTextSScard"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/solvedSScard"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="13.5dp"
            android:layout_marginTop="8.8dp"
            android:layout_marginEnd="17.6dp"
            android:background="@drawable/square_small_bg"
            android:padding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/subjectTagSScard"
            app:layout_constraintTop_toBottomOf="@+id/QuestionTextSScard"
            app:srcCompat="@drawable/ic_round_check_circle_24" />


    </androidx.constraintlayout.widget.ConstraintLayout>
        



</androidx.constraintlayout.widget.ConstraintLayout>