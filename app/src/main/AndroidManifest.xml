<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cproz.pantomath">
    <!-- Permissions used -->
    <uses-permission
        android:name="android.permission.INTERNET"
        tools:ignore="ManifestOrder" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.MEDIA_CONTENT_CONTROL"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="adjustPan"
        tools:ignore="AllowBackup">
        <activity android:name=".StudentProfile.Feedback"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".StudentProfile.Settings"
            />

        <activity
            android:name=".Home.Image"
            android:parentActivityName=".Home.DoubtDetails"
            android:theme="@style/imageView" />
        <activity android:name=".Signup.PackageSelection" />
        <activity
            android:name=".Login.ResetPassword"
            android:parentActivityName=".Login.Login" />
        <activity
            android:name=".Home.DoubtDetails"
            android:parentActivityName=".Home.Home" />
        <activity
            android:name=".StudentProfile.Settings"
            android:parentActivityName=".StudentProfile.StudentProfile"
            android:theme="@style/uploadFragment" />
        <activity
            android:name=".StudentProfile.StudentProfile"
            android:parentActivityName=".Home.Home"
            android:theme="@style/uploadFragment" />
        <activity
            android:name=".Upload.UploadImagePage"
            android:parentActivityName=".Home.Home"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Home.Home"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/uploadFragment"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat" /> <!-- activity ProfilePicture -->
        <activity
            android:name=".Signup.ProfilePictureSignup"
            android:parentActivityName=".Signup.Password"
            android:screenOrientation="portrait" /> <!-- activity passwordSignup -->
        <activity
            android:name=".Signup.Password"
            android:parentActivityName=".Signup.NewAccount"
            android:screenOrientation="portrait" /> <!-- activity new Acc -->
        <activity
            android:name=".Signup.NewAccount"
            android:parentActivityName=".Login.Login" /> <!-- activity login -->
        <activity
            android:name=".Login.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>